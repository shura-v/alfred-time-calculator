{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "declaration": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
