{
  "name": "alfred-time-calculator",
  "type": "module",
  "version": "3.12.6",
  "packageManager": "pnpm@9.0.0",
  "description": "Alfred workflow for calculating time expressions and durations",
  "license": "MIT",
  "repository": {
    "url": "git+https://github.com/shura-v/alfred-time-calculator.git"
  },
  "author": {
    "name": "Shura Vlasov",
    "url": "github.com/shura-v"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "pnpm build:node && pnpm build:workflow",
    "build:node": "rimraf dist && tsx scripts/node.ts",
    "build:workflow": "rimraf dist-workflow dist-release && tsx scripts/workflow.ts",
    "test": "cross-env TZ=UTC vitest --run",
    "test:coverage": "pnpm test -- --coverage",
    "test:watch": "cross-env TZ=UTC vitest --watch",
    "prepublishOnly": "pnpm test && pnpm build:node",
    "prepare": "husky"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tc": "dist/cli.js"
  },
  "files": [
    "dist/*"
  ],
  "keywords": [
    "alfred",
    "workflow",
    "time"
  ],
  "dependencies": {
    "chalk": "^5.4.1",
    "chrono-node": "^2.7.8",
    "date-fns": "^4.1.0",
    "expr-eval": "^2.0.2",
    "ms": "^2.1.3",
    "tsx": "^4.19.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/archiver": "^6.0.3",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "3.0.9",
    "archiver": "^7.0.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.2",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
